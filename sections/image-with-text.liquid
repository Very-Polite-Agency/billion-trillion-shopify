{%- liquid

  assign section_name = 'image-with-text'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_delay = 250
  assign aos_delay_increment = 250
  assign aos_id = section_id

  assign section_anchor = section.settings.anchor_id | default: ''
  assign section_blocks = section.blocks | default: false
  assign section_container = section.settings.container | default: 'container'

-%}

{%- style -%}
  {%
    render 'element-styles',
      background: section.settings.background,
      background_image: section.settings.background_image,
      background_image_position_desktop: section.settings.background_image_position_desktop,
      background_image_position_mobile: section.settings.background_image_position_mobile,
      background_image_repeat: section.settings.background_image_repeat,
      background_image_size: section.settings.background_image_size,
      border_bottom: section.settings.border_bottom,
      border_top: section.settings.border_top,
      id: section_id,
      padding_bottom: section.settings.padding_bottom,
      padding_top: section.settings.padding_top
  -%}
{%- endstyle -%}

<div class="{{ section_classes }}" id="{{ section_id }}">
  {% render 'bs-container', state: 'open', col: 'col-12', container: section_container %}
    <div class="{{ section_name }}__main text--uppercase">
      {%- for block in section_blocks -%}

        {%- liquid
          assign block_id = 'block--' | append: block.id
          assign block_type = block.type
        -%}

        <div class="{{ section_name }}__item {{ block_type }}" id="{{ block_id }}">
          {% case block_type %}

            {% when 'image' %}
              {%- liquid
                assign image = block.settings.image | default: false
                assign image_aspect_ratio_desktop = block.settings.image_aspect_ratio_desktop | default: ''
                assign image_aspect_ratio_mobile = block.settings.image_aspect_ratio_mobile | default: ''
              -%}
              {% if image %}
                {%- liquid
                  capture aos_attrs
                    render 'aos-attributes', anchor: aos_id, delay: aos_delay, transition: 'fade-up'
                  endcapture
                  assign aos_delay = aos_delay | plus: aos_delay_increment
                -%}
                <div class="{{ section_name }}__image" {{ aos_attrs }}>
                  {% render 'lazyload-image', image: image %}
                </div>
              {% endif %}

            {% when 'text' %}
              {%- liquid
                assign heading = block.settings.heading | default: ''
                assign heading_background = block.settings.heading_background | default: 'lemon'
                assign heading_size = block.settings.heading_size | default: 'md'
                assign message = block.settings.message | default: ''
                assign message_background = block.settings.message_background | default: 'mango'
                assign message_size = block.settings.message_size | default: 'sm'
              -%}
              {% if heading != blank %}
                {%- liquid
                  capture aos_attrs
                    render 'aos-attributes', anchor: block_id, delay: aos_delay, transition: 'fade-left'
                  endcapture
                  assign aos_delay = aos_delay | plus: aos_delay_increment
                -%}
                <strong
                  class="{{ section_name }}__heading heading--primary heading--{{ heading_size }}-fluid"
                  style="background: var(--theme-colour--{{ heading_background }});"
                 {{ aos_attrs }}
                >{{ heading }}</strong>
              {% endif %}
            {% if message != blank %}
              {%- liquid
                capture aos_attrs
                  render 'aos-attributes', anchor: block_id, delay: aos_delay, transition: 'fade-left'
                endcapture
                assign aos_delay = aos_delay | plus: aos_delay_increment
              -%}
              <div
                class="{{ section_name }}__message body-copy--primary body-copy--{{ message_size }}-fluid"
                style="background: var(--theme-colour--{{ message_background }});"
                {{ aos_attrs }}
              >{{ message }}</div>
            {% endif %}

          {% endcase %}
        </div>

      {%- endfor -%}
    </div>
  {% render 'bs-container', state: 'closed', col: 'col-12', container: section_container %}
</div>

{% schema %}
