{%- liquid

  assign section_name = 'footer'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_id = section_id | append: '--aos'
  assign aos_delay = 250
  assign aos_delay_increment = 250

  assign container = section.settings.container | default: 'container'
  assign menu = section.settings.menu | default: ''
  assign tagline_media_desktop = section.settings.tagline_media_desktop | default: false
  assign tagline_media_mobile = section.settings.tagline_media_mobile | default: false


-%}

{%- style -%}

  {%
    render 'element-styles',
      background: section.settings.background,
      background_image: section.settings.background_image,
      background_image_position_desktop: section.settings.background_image_position_desktop,
      background_image_position_mobile: section.settings.background_image_position_mobile,
      background_image_repeat: section.settings.background_image_repeat,
      background_image_size: section.settings.background_image_size,
      border_bottom: section.settings.border_bottom,
      border_top: section.settings.border_top,
      id: section_id
  %}

{%- endstyle -%}

<div class="{{ section_classes }}" id="{{ section_id }}">

  <div class="{{ section_name }}__main" id="{{ aos_id }}">
    {%- render 'bs-container', state: 'open', col: 'col-12', container: container -%}
      <div class="{{ section_name }}__main-content">

        {%- if menu and menu != blank -%}
          <nav class="{{ section_name }}__main-navigation navigation navigation--main">
            {%- for link in linklists[menu].links -%}
              <div class="{{ section_name }}__main-navigation-item navigation__item">
                {%- capture link_classes -%}{{ section_name }}__main-navigation-link navigation__link link{% if link.active %} active{% endif %}{%- endcapture -%}
                {%- render 'link', link_classes: link_classes, link_title: link.title, link_url: link.url -%}
              </div>
            {%- endfor -%}
          </nav>
        {%- endif -%}

        <strong class="{{ section_name }}__main-tagline">
          Welcome to the Good Time Galaxy
          {% if tagline_media_mobile %}
            <div class="{{ section_name }}__main-tagline-media d-lg-none">{% render "lazyload-image", image: tagline_media_mobile %}</div>
          {% endif %}
          {% if tagline_media_desktop %}
            <div class="{{ section_name }}__main-tagline-media d-none d-lg-block">{% render "lazyload-image", image: tagline_media_desktop %}</div>
          {% endif %}
        </strong>

      </div>
    {%- render 'bs-container', state: 'closed', col: 'col-12', container: container -%}
  </div>

  <div class="{{ section_name }}__footnote">
    {%- render 'bs-container', state: 'open', col: 'col-12', container: container -%}
      <div class="{{ section_name }}__footnote-content">
        <div class="{{ section_name }}__footnote-instagram">
          <span class="{{ section_name }}__footnote-instagram-cta">Follow Us</span>
          <a class="{{ section_name }}__footnote-instagram-link link" href="https://www.instagram.com/drinkbilliontrillion/" target="_blank" title="Follow {{ shop.name }}">@drinkbilliontrillion</a>
        </div>
        <div class="{{ section_name }}__footnote-legal">&copy; {{ "now" | date: "%Y" }} {{ shop.name }}</div>
      </div>
    {%- render 'bs-container', state: 'closed', col: 'col-12', container: container -%}
  </div>

</div>

