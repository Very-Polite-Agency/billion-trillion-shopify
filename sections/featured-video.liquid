{%- liquid

  assign section_name = 'featured-video'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_delay = 250
  assign aos_delay_increment = 250
  assign aos_id = section_id

  assign section_anchor = section.settings.anchor_id | default: ''
  assign section_container = section.settings.container | default: 'container'
  assign section_text_colour = section.settings.text_colour | default: 'dark'
  assign section_video = section.settings.video | default: 'dark'
  assign section_video_aspect_ratio = section.settings.video_aspect_ratio | default: '16/9'
  assign section_video_max_height_desktop = section.settings.video_max_height_desktop | default: ''
  assign section_video_max_height_mobile = section.settings.video_max_height_mobile | default: ''

  if section_video_max_height_desktop == blank
    assign section_video_max_height_desktop = 'none'
  endif

  if section_video_max_height_mobile == blank
    assign section_video_max_height_mobile = 'none'
  endif

-%}

{% if section_video and section_video != blank %}

  {%- style -%}

    #{{ section_id }} iframe {
      aspect-ratio: {{ section_video_aspect_ratio }};
      display: block;
      position: absolute;
      height: 100%;
      width: auto;
    }

    #{{ section_id }} .{{ section_name }}__video {
      max-height: {{ section_video_max_height_mobile }};
    }

    @media screen and (min-width: 992px) {
      #{{ section_id }} iframe,
      #{{ section_id }} .{{ section_name }}__video {
        aspect-ratio: {{ section_video_aspect_ratio }};
        height: auto;
        width: 100%;
      }
      #{{ section_id }} .{{ section_name }}__video {
        max-height: none;
      }
    }

    {%
      render 'element-styles',
        border_bottom: section.settings.border_bottom,
        border_top: section.settings.border_top,
        id: section_id,
        padding_bottom: section.settings.padding_bottom,
        padding_top: section.settings.padding_top
    -%}

  {%- endstyle -%}

  <div class="{{ section_classes }}" id="{{ section_id }}">

    <div class="{{ section_name }}__video">
      {%- render 'lazyload-embed', video_host: section_video.type, video_id: section_video.id -%}
    </div>

  </div>

{% endif %}

{% schema %}
{
  "name": "Featured Video",
  "tag": "section",
  "class": "section section--featured-video",
  "settings": [
    {
      "content": "Content",
      "type": "header"
    },
    {
      "label": "Video",
      "type": "video_url",
      "accept": [ "vimeo" ],
      "id": "video"
    },
    {
      "label": "Video Aspect Ratio",
      "type": "text",
      "default": "16/9",
      "id": "video_aspect_ratio"
    },
    {
      "label": "Video Maximum Height (Mobile)",
      "type": "text",
      "id": "video_max_height_mobile"
    },
    {
      "label": "Video Maximum Height (Desktop)",
      "type": "text",
      "id": "video_max_height_desktop"
    },
    {
      "content": "Settings",
      "type": "header"
    },
    {
      "content": "Anchor",
      "type": "header"
    },
    {
      "label": "Anchor ID",
      "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
      "type": "text",
      "id": "anchor_id"
    },
    {
      "content": "Border",
      "type": "header"
    },
    {
      "label": "Top Border",
      "type": "checkbox",
      "default": false,
      "id": "border_top"
    },
    {
      "label": "Bottom Border",
      "type": "checkbox",
      "default": false,
      "id": "border_bottom"
    },
    {
      "content": "Padding",
      "type": "header"
    },
    {
      "label": "Top Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 36,
      "id": "padding_top"
    },
    {
      "label": "Bottom Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 36,
      "id": "padding_bottom"
    },
    {
      "content": "Text",
      "type": "header"
    },
    {
      "label": "Text Colour",
      "type": "select",
      "options": [
        { "label": "Dark", "value": "dark" },
        { "label": "Light", "value": "light" }
      ],
      "default": "dark",
      "id": "text_colour"
    }
  ],
  "blocks": [
    {
      "name": "Heading",
      "type": "heading",
      "limit": 1,
      "settings": [
        {
          "content": "Content",
          "type": "header"
        },
        {
          "label": "Heading",
          "type": "text",
          "id": "heading"
        },
        {
          "label": "Heading Size",
          "type": "select",
          "options": [
            { "label": "Large", "value": "lg" },
            { "label": "Medium", "value": "md" },
            { "label": "Small", "value": "sm" }
          ],
          "default": "sm",
          "id": "heading_size"
        }
      ]
    },
    {
      "name": "Message",
      "type": "message",
      "limit": 1,
      "settings": [
        {
          "content": "Content",
          "type": "header"
        },
        {
          "label": "Message",
          "type": "richtext",
          "id": "message"
        },
        {
          "label": "Message Size",
          "type": "select",
          "options": [
            { "label": "Large", "value": "lg" },
            { "label": "Medium", "value": "md" },
            { "label": "Small", "value": "sm" }
          ],
          "default": "sm",
          "id": "message_size"
        }
      ]
    },
    {
      "name": "Subheading",
      "type": "subheading",
      "limit": 1,
      "settings": [
        {
          "content": "Content",
          "type": "header"
        },
        {
          "label": "Subheading",
          "type": "text",
          "id": "subheading"
        },
        {
          "label": "Subheading Size",
          "type": "select",
          "options": [
            { "label": "Large", "value": "lg" },
            { "label": "Medium", "value": "md" },
            { "label": "Small", "value": "sm" }
          ],
          "default": "sm",
          "id": "subheading_size"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Video",
      "blocks": [
        { "type": "subheading" },
        { "type": "heading" }
      ]
    }
  ]
}
{% endschema %}
