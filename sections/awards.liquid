{%- liquid

  assign section_name = 'awards'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_id = snippet_id
  assign aos_delay = 250
  assign aos_delay_increment = 250

  assign section_awards = section.blocks | where: 'type', "award"
  assign section_card_aspect_ratio_desktop = section.settings.card_aspect_ratio_desktop | default: ''
  assign section_card_aspect_ratio_mobile = section.settings.card_aspect_ratio_mobile | default: ''

  assign section_carousel_animation_duration = section.settings.carousel_animation_duration | default: 450
  assign section_carousel_autoplay = section.settings.carousel_autoplay | default: 3500
  assign section_carousel_gap = section.settings.carousel_gap | default: 28
  assign section_carousel_id = section_id | append: '--glide'
  assign section_carousel_pagination = section.settings.carousel_pagination | default: false
  assign section_carousel_style = section_name

  assign section_container = section.settings.container | default: 'container'
  assign section_glider_id = section_id | append: '--glider'
  assign section_grid_gap = section.settings.grid_gap | default: '20'

-%}

{%- if section_awards.size > 0 -%}

  {%- style -%}

    {%- if section_card_aspect_ratio_mobile and section_card_aspect_ratio_mobile != blank -%}
      #{{ section_id }} .card-award {
        aspect-ratio: {{ section_card_aspect_ratio_mobile }};
      }
    {%- endif -%}

    #{{ section_id }} .{{ section_name }}__grid {
      gap: {{ section_grid_gap }}px;
    }

    @media screen and (min-width: 992px) {
      {%- if section_card_aspect_ratio_desktop and section_card_aspect_ratio_desktop != blank -%}
        #{{ section_id }} .card-award {
          aspect-ratio: {{ section_card_aspect_ratio_desktop }};
        }
      {%- endif -%}
    }

    {%
      render 'element-styles',
        background: section.settings.background,
        background_image: section.settings.background_image,
        background_image_position_desktop: section.settings.background_image_position_desktop,
        background_image_position_mobile: section.settings.background_image_position_mobile,
        background_image_repeat: section.settings.background_image_repeat,
        background_image_size: section.settings.background_image_size,
        border_bottom: section.settings.border_bottom,
        border_top: section.settings.border_top,
        id: section_id,
        padding_bottom: section.settings.padding_bottom,
        padding_top: section.settings.padding_top
    -%}

  {%- endstyle -%}

  <div class="{{ section_classes }}" id="{{ section_id }}">
    <div class="{{ section_name }}__main">

      <div class="{{ section_name }}__heading">
        {%- render 'svg', type: 'heading.awards' -%}
      </div>

      <div
        class="{{ section_name }}__glide glide js--glide d-lg-none"
        data-glide-animation-duration="{{ section_carousel_animation_duration }}"
        data-glide-autoplay="{{ section_carousel_autoplay }}"
        data-glide-gap="{{ section_carousel_gap }}"
        data-glide-style="{{ section_carousel_style }}"
        id="{{ section_carousel_id }}"
      >

        <div class="glide__track" data-glide-el="track">
          <ul class="glide__slides">
            {%- for item in section_awards -%}
              <li class="glide__slide">
                {%- render 'card-award', card_item: item -%}
              </li>
            {%- endfor -%}
          </ul>
        </div>

        {%- if section_carousel_pagination -%}
          <div class="glide__bullets" data-glide-el="controls[nav]">
            {%- for item in section_awards -%}
              <button class="glide__bullet button" type="button" data-glide-dir="={{ forloop.index0 }}">
                {%- render 'svg', type: 'icon.pagination' -%}
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}

      </div>

      <div class="{{ section_name }}__grid grid--3 d-none d-lg-grid" role="list">
        {%- for item in section_awards -%}
          {%- capture snippet_classes -%}{{ section_name }}__item card-award{%- endcapture -%}
          {%- render 'card-award', card_aria_role: 'lisitem', card_item: item, classes: snippet_classes -%}
        {%- endfor -%}
      </div>

    </div>
  </div>

{%- endif -%}

