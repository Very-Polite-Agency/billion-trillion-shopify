    "settings": [
      {
        "content": "Navigation",
        "type": "header"
      },
      {
        "label": "Main Menu",
        "type": "link_list",
        "id": "menu_main"
      },
      {
        "content": "Settings",
        "type": "header"
      }
    ],
	  "blocks": []
  }
