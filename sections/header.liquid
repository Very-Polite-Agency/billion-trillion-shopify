{%- liquid

  assign section_name = 'header'
  assign section_classes = section_name
  assign section_id = 'shopify-section-' | append: section.id

  assign aos_delay = 250
  assign aos_delay_increment = 250
  assign aos_id = section_id

  assign section_cart_show_icon = section.settings.cart_show_icon | default: false
  assign section_height_desktop = section.settings.height_desktop
  assign section_height_mobile = section.settings.height_mobile
  assign section_logo_height_desktop = section.settings.logo_height_desktop
  assign section_logo_height_mobile = section.settings.logo_height_mobile
  assign section_menu_main = section.settings.menu_main | default: false

-%}

{%- style -%}

  :root {
    --theme-header-height--mobile: {{ section_height_mobile }}px;
    --theme-header-height--desktop: {{ section_height_desktop }}px;
    --theme-header-logo-height--mobile: {{ section_logo_height_mobile }}px;
    --theme-header-logo-height--desktop: {{ section_logo_height_desktop }}px;
  }

  {%-
    render 'element-styles',
      background: section.settings.background,
      background_image: section.settings.background_image,
      background_image_position_desktop: section.settings.background_image_position_desktop,
      background_image_position_mobile: section.settings.background_image_position_mobile,
      background_image_repeat: section.settings.background_image_repeat,
      background_image_size: section.settings.background_image_size,
      border_bottom: section.settings.border_bottom,
      border_top: section.settings.border_top,
      height_desktop: section_height_desktop,
      height_mobile: section_height_mobile,
      id: section_id
  -%}

{%- endstyle -%}

<div class="{{ section_name }}__main text--uppercase text--primary">

  <button class="{{ section_name }}__main-burger button js--open-drawer" data-drawer-id="shopify-section-drawer-mobile-menu" type="button"></button>

  {%- liquid
    capture aos_attrs
      render 'aos-attributes', anchor: aos_id, delay: 750, transition: 'fade-up'
    endcapture
  -%}
  <div class="{{ section_name }}__main-logo" {{ aos_attrs }}>
    <a class="{{ section_name }}__main-logo-link link" href="/" target="_self" title="{{ shop.name }}">
      {% render 'svg', type: 'logo' %}
    </a>
  </div>

  {% if section_menu_main and section_menu_main != blank %}
    {%- liquid
      capture aos_attrs
        render 'aos-attributes', anchor: aos_id, delay: 500, transition: 'fade-down'
      endcapture
    -%}
    <nav class="{{ section_name }}__main-navigation navigation navigation--main" {{ aos_attrs }}>
      {%- for link in linklists[section_menu_main].links -%}
        <div class="{{ section_name }}__main-navigation-item navigation__item">
          {%- capture link_classes -%}{{ section_name }}__main-navigation-link navigation__link link{% if link.active %} active{% endif %}{%- endcapture -%}
          {%- render 'link', link_classes: link_classes, link_title: link.title, link_url: link.url -%}
        </div>
      {%- endfor -%}
    </nav>
  {% endif %}

  {% if section_cart_show_icon == true and request.path != '/cart' %}
    {%- liquid
      capture aos_attrs
        render 'aos-attributes', anchor: aos_id, delay: 1000, transition: 'fade-left'
      endcapture
    -%}
    <button class="{{ section_name }}__main-cart-summary button js--open-drawer" data-drawer-id="shopify-section-drawer-cart" type="button" {{ aos_attrs }}>
      <span class="{{ section_name }}__main-cart-summary-icon">
        {% render 'svg', type: 'icon.cart' %}
      </span>
      <span class="{{ section_name }}__main-cart-summary-total js--cart-line-items-total">
        <!-- JavaScript here... -->
      </span>
    </div>
  {% endif %}

</div>

