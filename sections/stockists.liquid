{%- liquid

  assign section_name = 'stockists'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_delay = 250
  assign aos_delay_increment = 250
  assign aos_id = snippet_id

  assign section_anchor = section.settings.anchor_id | default: ''
  assign section_container = section.settings.container | default: 'full-width'
  assign section_region_blocks = section.blocks | where: 'type', 'region'
  assign section_region_blocks_size = section_region_blocks.size | default: 0

-%}

{%- if section_region_blocks_size > 0 -%}

  {%- style -%}
    {%
      render 'element-styles',
        background: section.settings.background,
        background_image: section.settings.background_image,
        background_image_position_desktop: section.settings.background_image_position_desktop,
        background_image_position_mobile: section.settings.background_image_position_mobile,
        background_image_repeat: section.settings.background_image_repeat,
        background_image_size: section.settings.background_image_size,
        border_bottom: section.settings.border_bottom,
        border_top: section.settings.border_top,
        id: section_id,
        padding_bottom: section.settings.padding_bottom,
        padding_top: section.settings.padding_top
    -%}
  {%- endstyle -%}

  <div class="{{ section_classes }}" id="{{ section_id }}">
    {% render 'bs-container', state: 'open', col: 'col-12', container: section_container %}
      <div class="{{ section_name }}__list" role="list">
        {% for block in section_region_blocks %}

          {%- liquid
            assign region_background = block.settings.background | default: 'lemon'
            assign region_coordinates = block.settings.coordinates | default: ''
            assign region_country = block.settings.country | default: ''
            assign region_id = 'stockists-region--' | append: block.id
            assign region_image = block.settings.image | default: false
            assign region_population = block.settings.population | default: 0
            assign region_smells_like = block.settings.smells_like | default: ''
            assign region_title = block.settings.title | default: ''
            assign region_total_area = block.settings.total_area | default: 0
          -%}

          <div
            class="{{ section_name }}__region text--dark text--uppercase js--region"
            data-region="{{ region_title }}"
            data-region-country="{{ region_country }}"
            data-region-population="{{ region_population }}"
            data-region-total-area="{{ region_total_area }}"
            id="{{ region_id }}"
            role="listitem"
          >

            {%- style -%}
              {%
                render 'element-styles',
                  background: region_background,
                  id: region_id,
              -%}
            {%- endstyle -%}

            <div class="{{ section_name }}__region-hero text--light">
              <div class="{{ section_name }}__region-hero-image">
                {% render 'lazyload-image', image: region_image %}
                <div class="{{ section_name }}__region-hero-content text--align-center">
                  <h2 class="{{ section_name }}__region-title text--primary">{{ region_title }}</h2>
                  <div class="{{ section_name }}__region-country body-copy--3 text--secondary">{{ region_country }}, Earth</div>
                </div>
              </div>
            </div>

            <div class="{{ section_name }}__region-stats text--primary">
              <div class="{{ section_name }}__region-stats-grid two-column--flex">
                <div class="{{ section_name }}__region-stats-column width-auto">
                  <span class="{{ section_name }}__region-stats-label text--secondary">Population</span>
                  <span class="{{ section_name }}__region-stats-value" id="{{ region_id }}--population">
                    <!-- Inject JavaScript Here... -->
                  </span>
                </div>
                <div class="{{ section_name }}__region-stats-column width-flex-grow">
                  <span class="{{ section_name }}__region-stats-scale" id="{{ region_id }}--scale">
                    <!-- Inject JavaScript Here... -->
                  </span>
                </div>
              </div>
              <div class="{{ section_name }}__region-stats-grid two-column">
                <div class="{{ section_name }}__region-stats-column">
                  <span class="{{ section_name }}__region-stats-label text--secondary">Total Area</span>
                  <span class="{{ section_name }}__region-stats-value" id="{{ region_id }}--total-area">
                    <!-- Inject JavaScript Here... -->
                  </span>
                </div>
                <div class="{{ section_name }}__region-stats-column">
                  <span class="{{ section_name }}__region-stats-label text--secondary">Coordinates</span>
                  <span class="{{ section_name }}__region-stats-value">{{ region_coordinates }}</span>
                </div>
              </div>
              <div class="{{ section_name }}__region-stats-grid">
                <div class="{{ section_name }}__region-stats-column">
                  <span class="{{ section_name }}__region-stats-label text--secondary">Smells Like</span>
                  <span class="{{ section_name }}__region-stats-value">{{ region_smells_like }}</span>
                </div>
              </div>
            </div>

            <div class="{{ section_name }}__region-locations text--primary js--stockist-region" data-region="{{ region_title  }}">
              <!-- Inject JavaScript Here... -->
            </div>

          </div>

        {% endfor %}
      </div>
    {% render 'bs-container', state: 'closed', col: 'col-12', container: section_container %}
  </div>

{%- endif -%}

