{%- liquid

  assign section_name = 'faqs'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_delay = 250
  assign aos_delay_increment = 250
  assign aos_id = section_id

  assign section_anchor = section.settings.anchor_id | default: ''
  assign section_container = section.settings.container | default: 'container'
  assign section_faq_blocks = section.blocks | where: 'type', 'faq'
  assign section_faq_blocks_size = section_faq_blocks.size | default: 0
  assign section_media_blocks = section.blocks | where: 'type', 'media'
  assign section_media_blocks_size = section_media_blocks.size | default: 0

-%}

{% if section_faq_blocks_size > 0 %}

  {%- style -%}

    #{{ section_id }} {
      --marquee-duration: {{ section_marquee_duration }}s;
      --marquee-gap: {{ section_marquee_gap }}px;
      font-size: {{ section_marquee_text_size }}px;
    }

    #{{ section_id }} .image,
    #{{ section_id }} .text {
      padding: {{ section_marquee_item_padding_y }}px {{ section_marquee_item_padding_x }}px;
    }

    #{{ section_id }} .image,
    #{{ section_id }} .image img {
      height: {{ section_marquee_image_height }}px;
      width: {{ section_marquee_image_width }}px;
    }

    @media screen and (min-width: 992px) {
      #{{ section_id }} {
        font-size: calc({{ section_marquee_text_size }}px * 1.125);
      }
    }

    {%
      render 'element-styles',
        background: section.settings.background,
        background_image: section.settings.background_image,
        background_image_position_desktop: section.settings.background_image_position_desktop,
        background_image_position_mobile: section.settings.background_image_position_mobile,
        background_image_repeat: section.settings.background_image_repeat,
        background_image_size: section.settings.background_image_size,
        border_bottom: section.settings.border_bottom,
        border_top: section.settings.border_top,
        id: section_id,
        padding_bottom: section.settings.padding_bottom,
        padding_top: section.settings.padding_top
    -%}

  {%- endstyle -%}

  <div class="{{ section_classes }}" id="{{ section_id }}">
    {% render 'bs-container', state: 'open', col: 'col-12', container: container %}

      <strong>FAQs</strong>

      <div class="{{ section_name }}__main">

        {%- if section_media_blocks_size > 0 -%}
          <div class="{{ section_name }}__media">
            {%- for block in section_media_blocks -%}
              {%- liquid
                assign media_aspect_ratio = block.settings.media_aspect_ratio | default: ''
                assign media_image = block.settings.image | default: false
                assign media_type = block.settings.media_type | default: 'image'
                assign media_video = block.settings.video | default: false
              -%}
              {%- if media_image or media_video -%}
                <div class="{{ section_name }}__media-{{ media_type }}">
                  {% if media_aspect_ratio != blank %}
                    {%- style -%}
                      #{{ section_id }} .{{ section_name }}__media-{{ media_type }} {
                        aspect-ratio: {{ media_aspect_ratio }};
                      }
                    {%- endstyle -%}
                  {%- endif -%}
                  {%- case media_type -%}
                    {%- when 'image' -%}
                      {%- render 'lazyload-image', image: media_image -%}
                    {%- when 'video' %}
                      {%- render 'lazyload-embed', video_host: media_video.type, video_id: media_video.id, video_inline: false -%}
                  {%- endcase -%}
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        {%- endif -%}

        <div class="{{ section_name }}__list" role="list">
          {%- for block in section_faq_blocks -%}
            {%- liquid
              assign faq_answer = block.settings.answer | default: ''
              assign faq_title = block.settings.title | default: ''
              assign faq_id = block.id | prepend: 'faqs__accordion-'
              capture aos_attrs
                render 'aos-attributes', anchor: aos_id, delay: aos_delay, transition: 'fade-left'
              endcapture
              assign aos_delay = aos_delay | plus: aos_delay_increment
            -%}
            <div class="{{ section_name }}__item accordion" role="listitem" {{ accordion_aos }}>
              {% render 'bs-accordion', accordion_content: faq_answer, accordion_id: faq_id, accordion_title: faq_title %}
            </div>
          {%- endfor -%}
        </div>

      </div>
    {% render 'bs-container', state: 'closed', col: 'col-12', container: container %}
  </div>

{% endif %}

{% schema %}
{
  "name": "FAQs",
  "tag": "section",
  "class": "section section--faqs",
  "settings": [
    {
      "content": "FAQs",
      "type": "header"
    },
    {
      "label": "FAQs Text Colour",
      "type": "select",
      "options": [
        { "label": "Dark", "value": "dark" },
        { "label": "Light", "value": "light" }
      ],
      "default": "dark",
      "id": "text_colour"
    },
    {
      "content": "Settings",
      "type": "header"
    },
    {
      "content": "Anchor",
      "type": "header"
    },
    {
      "label": "Anchor ID",
      "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
      "type": "text",
      "id": "anchor_id"
    },
    {
      "label": "Background",
      "type": "select",
      "options": [
        { "label": "Image", "value": "image" },
        { "label": "Lemon", "value": "lemon" },
        { "label": "Lime", "value": "lime" },
        { "label": "Mango", "value": "mango" },
        { "label": "None", "value": "none" },
        { "label": "Orange", "value": "orange" },
        { "label": "Strawberry", "value": "strawberry" }
      ],
      "default": "none",
      "id": "background"
    },
    {
      "label": "Background Image",
      "type": "image_picker",
      "id": "background_image"
    },
    {
      "label": "Background Image Position (Mobile)",
      "type": "select",
      "options": [
        { "label": "Top Left", "value": "top left" },
        { "label": "Top Center", "value": "top center" },
        { "label": "Top Right", "value": "top right" },
        { "label": "Center Left", "value": "center left" },
        { "label": "Center Center", "value": "center center" },
        { "label": "Center Right", "value": "center right" },
        { "label": "Bottom Left", "value": "bottom left" },
        { "label": "Bottom Center", "value": "bottom center" },
        { "label": "Bottom Right", "value": "bottom right" }
      ],
      "default": "center center",
      "id": "background_image_position_mobile"
    },
    {
      "label": "Background Image Position (Desktop)",
      "type": "select",
      "options": [
        { "label": "Top Left", "value": "top left" },
        { "label": "Top Center", "value": "top center" },
        { "label": "Top Right", "value": "top right" },
        { "label": "Center Left", "value": "center left" },
        { "label": "Center Center", "value": "center center" },
        { "label": "Center Right", "value": "center right" },
        { "label": "Bottom Left", "value": "bottom left" },
        { "label": "Bottom Center", "value": "bottom center" },
        { "label": "Bottom Right", "value": "bottom right" }
      ],
      "default": "center center",
      "id": "background_image_position_desktop"
    },
    {
      "label": "Background Image Repeat",
      "type": "select",
      "options": [
        { "label": "No Repeat", "value": "no-repeat" },
        { "label": "Repeat", "value": "repeat" }
      ],
      "default": "repeat",
      "id": "background_image_repeat"
    },
    {
      "label": "Background Image Size",
      "type": "select",
      "options": [
        { "label": "100px", "value": "100px" },
        { "label": "200px", "value": "200px" },
        { "label": "300px", "value": "300px" },
        { "label": "400px", "value": "400px" },
        { "label": "500px", "value": "500px" },
        { "label": "Auto", "value": "auto" },
        { "label": "Contain", "value": "contain" },
        { "label": "Cover", "value": "cover" }
      ],
      "default": "cover",
      "id": "background_image_size"
    },
    {
      "content": "Border",
      "type": "header"
    },
    {
      "label": "Top Border",
      "type": "checkbox",
      "default": false,
      "id": "border_top"
    },
    {
      "label": "Bottom Border",
      "type": "checkbox",
      "default": false,
      "id": "border_bottom"
    },
    {
      "content": "Padding",
      "type": "header"
    },
    {
      "label": "Top Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 36,
      "id": "padding_top"
    },
    {
      "label": "Bottom Padding",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 36,
      "id": "padding_bottom"
    }
  ],
  "blocks": [
    {
      "name": "FAQ",
      "type": "faq",
      "settings": [
        {
          "content": "Content",
          "type": "header"
        },
        {
          "label": "Title",
          "type": "text",
          "id": "title"
        },
        {
          "label": "Answer",
          "type": "richtext",
          "id": "answer"
        }
      ]
    },
    {
      "name": "Media",
      "type": "media",
      "limit": 1,
      "settings": [
        {
          "content": "Content",
          "type": "header"
        },
        {
          "label": "Image",
          "type": "image_picker",
          "id": "image"
        },
        {
          "label": "Video",
          "type": "video_url",
          "accept": [ "vimeo" ],
          "id": "video"
        },
        {
          "content": "Settings",
          "type": "header"
        },
        {
          "label": "Media Ratio",
          "type": "text",
          "id": "media_aspect_ratio"
        },
        {
          "label": "Media Ratio (Mobile)",
          "type": "text",
          "id": "media_aspect_ratio_mobile"
        },
        {
          "label": "Media Ratio (Desktop)",
          "type": "text",
          "id": "media_aspect_ratio_desktop"
        },
        {
          "label": "Media Type",
          "type": "select",
          "options": [
            { "label": "Image", "value": "image" },
            { "label": "Video", "value": "video" }
          ],
          "default": "image",
          "id": "media_type"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQs",
      "blocks": [
        { "type": "faq" },
        { "type": "faq" },
        { "type": "faq" }
      ]
    }
  ]
}
{% endschema %}
