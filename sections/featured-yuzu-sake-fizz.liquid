      "default": "orange",
      "id": "background"
    },
    {
      "content": "Border",
      "type": "header"
    },
    {
      "label": "Top Border",
      "type": "checkbox",
      "default": false,
      "id": "border_top"
    },
    {
      "label": "Bottom Border",
      "type": "checkbox",
      "default": false,
      "id": "border_bottom"
    }
  ],
  "blocks": [
    {
      "name": "Content",
      "type": "content",
      "limit": 1,
      "settings": []
    },
    {
      "name": "Media",
      "type": "media",
      "limit": 1,
      "settings": []
    }
  ],
  "presets": [
    {
      "name": "Featured Yuzu Sake Fizz",
      "blocks": [
        { "type": "media" },
        { "type": "content" }
      ]
    }
  ]
}
{% endschema %}
