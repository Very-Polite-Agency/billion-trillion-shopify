{%- liquid

  assign section_name = 'featured-product'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_id = section_id | append: '--aos'
  assign aos_delay = 250
  assign aos_delay_increment = 250

  assign container = section.settings.container | default: 'container'

  assign section_product = section.settings.product | defaul: false
  assign section_anchor_id = section.settings.anchor_id | default: ''

  assign section_heading = section_product.title | default: ''
  assign section_image = section_product.featured_image | default: false
  assign section_message = section_product.description | default: ''
  assign section_link = section_product.url | default: ''

-%}

{%- style -%}

  {%
    render 'element-styles',
      border_bottom: section.settings.border_bottom,
      border_top: section.settings.border_top,
      id: section_id
  %}

{%- endstyle -%}

<div class="{{ section_classes }}" id="{{ section_id }}">
  <div class="fifty-fifty">
    {%- for block in section.blocks -%}

      {%- assign block_id = block.id | prepend: 'block-id--' -%}

      <div class="{{ section_name }}__item fifty-fifty__item {{ block.type }}" role="listitem" id="{{ block_id }}">
        {%- case block.type -%}

          {%- when 'content' -%}

            {%- liquid
              assign block_id = block.id | prepend: 'block-id--'
              assign section_heading = block.settings.heading | default: section_heading
              assign section_message = block.settings.message | default: section_message
            -%}

            <div class="{{ section_name }}__content fifty-fifty__content">

              {%- style -%}
                {%
                  render 'element-styles',
                    background: block.settings.background
                    id: block_id
                %}
              {%- endstyle -%}

              {% if section_heading != blank %}
                <strong class="{{ section_name }}__heading fifty-fifty__heading">{{ section_heading }}</strong>
              {% endif %}
              {% if section_message != blank %}
                <div class="{{ section_name }}__message fifty-fifty__message">{{ section_message }}</div>
              {% endif %}

              {% if section_link != blank %}
                <div class="{{ section_name }}__cta fifty-fifty__cta">
                  <a class="{{ section_name }}__cta-link fifty-fifty__cta-link link" href="{{ section_link }}" target="_self" title="Shop {{ section_heading }}">
                    <div class="button--svg d-lg-none">{% render 'svg', type: 'button.shop-now.sm' %}</div>
                    <div class="button--svg d-none d-lg-block">{% render 'svg', type: 'button.shop-now.md' %}</div>
                  </a>
                </div>
              {% endif %}

            </div>

          {%- when 'image' -%}

            {%- liquid
              assign section_badge = block.settings.badge | default: 'none'
              assign section_image = block.settings.image | default: section_image
            -%}

            {% if section_image %}
              <div class="{{ section_name }}__image fifty-fifty__image">
                {% if section_link != blank %}<a class="{{ section_name }}__image-link fifty-fifty__image-link link" href="{{ section_link }}" target="_self" title="{{ section_heading }}">{% endif %}
                  {% render 'lazyload-image', image: section_image %}
                  {% unless 'none' == section_badge %}
                    <div class="{{ section_name }}__image-badge">
                      {% capture badge_type %}badge.{{ section_badge }}{% endcapture %}
                      {% render 'svg', type: badge_type %}
                    </div>
                  {% endunless %}
                {% if section_link != blank %}</a>{% endif %}
              </div>
            {% endif %}

        {%- endcase -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Featured Product",
  "tag": "section",
  "class": "section section--featured-product",
  "settings": [
    {
      "content": "Content",
      "type": "header"
    },
     {
      "content": "By default, the heading, image and body copy will automatically be pulled from the selected product. To customize, and override this automation, update the corresponding fields within this section's blocks.",
      "type": "paragraph"
    },
    {
      "label": "Product",
      "type": "product",
      "id": "product"
    },
    {
      "content": "Settings",
      "type": "header"
    },
    {
      "content": "Anchor",
      "type": "header"
    },
    {
      "label": "Anchor ID",
      "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
      "type": "text",
      "id": "anchor_id"
    },
    {
      "content": "Border",
      "type": "header"
    },
    {
      "label": "Top Border",
      "type": "checkbox",
      "default": false,
      "id": "border_top"
    },
    {
      "label": "Bottom Border",
      "type": "checkbox",
      "default": false,
      "id": "border_bottom"
    }
  ],
  "blocks": [
    {
      "name": "Content",
      "type": "content",
      "limit": 1,
      "settings": [
        {
          "content": "Content",
          "type": "header"
        },
        {
          "label": "Heading",
          "info": "Optionally override the product title",
          "type": "text",
          "id": "heading"
        },
        {
          "label": "Message",
          "info": "Optionally override the product description",
          "type": "richtext",
          "id": "message"
        },
        {
          "content": "Settings",
          "type": "header"
        },
        {
          "label": "Background",
          "type": "select",
          "options": [
            { "label": "Lemon", "value": "lemon" },
            { "label": "Lime", "value": "lime" },
            { "label": "Mango", "value": "mango" },
            { "label": "None", "value": "none" },
            { "label": "Orange", "value": "orange" },
            { "label": "Strawberry", "value": "strawberry" }
          ],
          "default": "none",
          "id": "background"
        }
      ]
    },
    {
      "name": "Image",
      "type": "image",
      "limit": 1,
      "settings": [
        {
          "content": "Content",
          "type": "header"
        },
        {
          "label": "Image",
          "info": "Optionally override the product's featured image",
          "type": "image_picker",
          "id": "image"
        },
        {
          "label": "Badge",
          "type": "select",
          "options": [
            { "label": "Hot", "value": "hot" },
            { "label": "None", "value": "none" }
          ],
          "default": "none",
          "id": "badge"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Product"
    }
  ]
}
{% endschema %}
