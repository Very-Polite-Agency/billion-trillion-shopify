{%- liquid

  assign section_name = 'featured-product'
  assign section_classes = section_name
  assign section_id = section_name | append: '--' | append: section.id

  assign aos_id = section_id | append: '--aos'
  assign aos_delay = 250
  assign aos_delay_increment = 250

  assign section_container = section.settings.container | default: 'container'
  assign section_product = section.settings.product | defaul: false

  assign section_content_background = 'orange'
  assign section_content_heading = section_product.title | default: ''
  assign section_content_link = section_product.url | default: ''
  assign section_content_message = section_product.description | default: ''

  assign section_media_badge = 'none'
  assign section_media_image = section_product.featured_image | default: false
  assign section_media_order = 1

  if 'content' == section.blocks.first.type
    assign section_media_order = 2
  endif

  assign block_media = section.blocks | where: "type", "media"
  assign block_content = section.blocks | where: "type", "content"

  assign section_media_badge = block_media.settings.badge | default: section_media_badge
  assign section_media_image = block_media.settings.image | default: section_media_image
  assign section_content_heading = block_content.settings.heading | default: section_content_heading
  assign section_content_message = block_content.settings.message | default: section_content_message
  assign section_content_background = block_content.settings.background | default: section_content_background

-%}

{%- style -%}

  {% if section_image_order != 1 %}
    @media screen and (min-width: 992px) {
      #{{ section_id }} .fifty-fifty__item.content {
        order: 1;
      }
      #{{ section_id }} .fifty-fifty__item.media {
        order: 2;
      }
    }
  {% endif %}

  {%
    render 'element-styles',
      border_bottom: section.settings.border_bottom,
      border_top: section.settings.border_top,
      id: section_id
  %}

{%- endstyle -%}

<div class="{{ section_classes }}" id="{{ section_id }}">

  {% capture snippet_classes %}{{ section_name }}__main fifty-fifty{% endcapture %}
  {%
    render 'fifty-fifty',
      classes: snippet_classes
      heading: section_heading,
      id: section_id | append: '--fify-fifty',
      image: section_image,
      message: section_message,
      link: section_link
  %}

</div>

{% schema %}
{
  "name": "Featured Product",
  "tag": "section",
  "class": "section section--featured-product",
  "settings": [
    {
      "content": "Product",
      "type": "header"
    },
    {
      "label": "Product",
      "type": "product",
      "id": "product"
    },
    {
      "content": "By default, the heading, image and body copy will automatically be pulled from the selected product. To customize, and override this automation, update the corresponding fields below.",
      "type": "paragraph"
    },
    {
      "label": "Badge",
      "info": "Optionally select a badge to pair with the product image.",
      "type": "select",
      "options": [
        { "label": "Hot", "value": "hot" },
        { "label": "None", "value": "none" }
      ],
      "default": "none",
      "id": "badge"
    },
    {
      "label": "Heading",
      "info": "Optionally override the product title.",
      "type": "text",
      "id": "heading"
    },
    {
      "label": "Image",
      "info": "Optionally override the product's featured image.",
      "type": "image_picker",
      "id": "image"
    },
    {
      "label": "Message",
      "info": "Optionally override the product description.",
      "type": "richtext",
      "id": "message"
    },
    {
      "content": "Settings",
      "type": "header"
    },
    {
      "content": "Anchor",
      "type": "header"
    },
    {
      "label": "Anchor ID",
      "info": "Optionally include a unique ID so that sections within the page can be linked to. Anchor IDs must be all lowercase, unique and replaced empty spaces with hyphens. For example: my-great-section-anchor",
      "type": "text",
      "id": "anchor_id"
    },
    {
      "label": "Background",
      "type": "select",
      "options": [
        { "label": "Lemon", "value": "lemon" },
        { "label": "Lime", "value": "lime" },
        { "label": "Mango", "value": "mango" },
        { "label": "None", "value": "none" },
        { "label": "Orange", "value": "orange" },
        { "label": "Strawberry", "value": "strawberry" }
      ],
      "default": "orange",
      "id": "background"
    },
    {
      "content": "Border",
      "type": "header"
    },
    {
      "label": "Top Border",
      "type": "checkbox",
      "default": false,
      "id": "border_top"
    },
    {
      "label": "Bottom Border",
      "type": "checkbox",
      "default": false,
      "id": "border_bottom"
    }
  ],
  "blocks": [
    {
      "name": "Content",
      "type": "content",
      "limit": 1,
      "settings": []
    },
    {
      "name": "Media",
      "type": "media",
      "limit": 1,
      "settings": []
    }
  ],
  "presets": [
    {
      "name": "Featured Product",
      "blocks": [
        { "type": "media" },
        { "type": "content" }
      ]
    }
  ]
}
{% endschema %}
